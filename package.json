{
	"name": "cleacss",
	"version": "1.0.0-beta.4",
	"description": "A minimal framework for css enthusiasts",
	"keywords": ["css", "cssframework"],
	"main": "dist/cleacss.css",
	"repository": "git@github.com:JuKra00/cleacss.git",
	"homepage": "https://cleacss.dev",
	"author": "Justus Kraft <hallo@justuskraft.de> (https://justuskraft.com)",
	"license": "MIT",
	"private": false,
	"browserslist": [
		"last 2 versions",
		">= 0.4%",
		"not dead",
		"Firefox ESR",
		"not op_mini all",
		"not and_uc > 0"
	],
	"exports": {
		".": {
			"import": "./dist/cleacss.css",
			"require": "./dist/cleacss.css"
		},
		"./scss": "./src/cleacss.scss"
	},
	"scripts": {
		"dev": "sass src/cleacss.scss:dist/cleacss.css --watch",
		"sass": "sass src/cleacss.scss:dist/cleacss.css",
		"build": "pnpm clean && pnpm sass && pnpm minify",
		"minify": "lightningcss --minify --bundle --browserslist --custom-media ./dist/cleacss.css -o ./dist/cleacss.css",
		"clean": "rimraf dist",
		"lint": "stylelint '**/*.scss' --customSyntax postcss-scss",
		"release": "release-it --preRelease",
		"playground": "concurrently \"pnpm dev\" \"pnpm --filter cleacss-playground dev\""
	},
	"devDependencies": {
		"@release-it/conventional-changelog": "^10.0.0",
		"concurrently": "^9.1.2",
		"lightningcss-cli": "^1.29.3",
		"release-it": "^18.1.2",
		"rimraf": "^5.0.10",
		"sass": "^1.85.1",
		"stylelint": "^16.16.0",
		"stylelint-config-recommended-scss": "^14.1.0",
		"stylelint-order": "^6.0.4"
	},
	"packageManager": "pnpm@10.6.3",
	"pnpm": {
		"onlyBuiltDependencies": ["esbuild", "lightningcss-cli"]
	}
}
